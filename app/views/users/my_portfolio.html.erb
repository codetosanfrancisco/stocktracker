<h1>My Portfolio</h1>

<h3>Search for stocks :</h3>

<div id="stock-lookup">
  <%= form_tag search_stocks_path,method: :get,id:"stock-lookup-form",remote:true do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10"><%= text_field_tag :stock,params[:stock],placeholder:"Stock ticker symbol",autofocus:true,
      class:"form-control search-box input-lg"%></div>
      <div class="col-md-2">
        <%= button_tag "Search for stock!",type: :submit,class:"btn btn-lg btn-success"%>
      </div>
    </div>
  <%end%>
</div>

<div id="stock-lookup-result">
  <%= render "results"%>
</div>

<%= render 'stocks/listing'%>